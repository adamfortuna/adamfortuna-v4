- content_for :before_stylesheets do
  %link{ href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', rel: 'stylesheet' }
  %link{ href: 'http://adamfortuna.github.io/scribe/css/main.css', rel: 'stylesheet' }

- content_for :javascript do
  %script{ src: 'http://adamfortuna.github.io/scribe/dist/scribe.min.js' }
  :javascript
    angular.module('Scribe').config(['settingsProvider', function config(settingsProvider) {
      settingsProvider.setId(2419634);
      settingsProvider.setApiUrl('http://goodcache.herokuapp.com');
    }]);

= partial 'shared/title', locals: { offset: 1 } do
  %h1.title--header Books
  %p.title--description Science Fiction and Personal Development are my genres of choice!

.row
  .medium-10.medium-offset-1.columns.end
    %article.content
      %h2 What Is This?

      %p
        I love listening to audiobooks whenever I'm driving, walking my dog or doing things around the house. I keep track of these on
        %a{href:'https://www.goodreads.com/user/show/2419634-adam-fortuna'} Goodreads
        and created a super-simple
        %a{href:'https://github.com/adamfortuna/scribe'} Angular App
        to pull the data.

      %div{'ng-app': 'Scribe'}
        %div{'ng-view': true}
