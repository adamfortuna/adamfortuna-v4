= partial 'shared/title', locals: { offset: 1 } do
  %img.face.left{src: '/images/adam-fortuna.png', alt: 'Adam Fortuna'}
  %h1.title--header.small-8.columns.end Adam Fortuna
  %p.title--meta.medium-8.left.columns.title--author
    = partial 'shared/author_content'

.row
  .articles--list.medium-5.medium-offset-1.columns
    %p.subtitle.light
      %strong Articles.
      In the mood for
      %a.category--personal{ href: '/tags/personal' } personal
      or
      = succeed "?" do
        %a.category--technical{ href: '/tags/technical' } technical

    - blog('articles').articles[0..10].each do |article|
      = partial 'articles/article', locals: { article: article }

    .row.article--item
      %a.article--link.medium-12.columns{:href => '/articles'}
        %span.article--title More Articles
        %p.article--meta
          = blog('articles').articles.length
          articles total.

  .medium-6.columns.end.right-side
    %p.subtitle.light
      %strong Travel Photos.
      Recent trips and getaways.
      %a{ href: '/photos/japan'} Japan
      is my favorite.

    %ul.no-bullet.photos-list.photos-list--travel
      - matches = 0
      - blog('photos').articles.each do |article|
        - if (matches < 3) && (article.tags.include? "Travel")
          - matches = matches + 1
          %li.photos-list--item
            = partial 'photos/travel', locals: { article: article }

    .row.article--item.article-tag--meta
      %a.article--link.medium-12.columns{:href => '/photos'}
        %span.article--title More Photos
        %p.article--meta
          = blog('photos').articles.length
          photo posts.

.row
  .medium-offset-1.medium-11.index--events
    %h2 Event Photos
    %p.meta Mostly pictures from events around Orlando.
    %ul.no-bullet.photos-list.photos-list--asides.row
      - matches = 0
      - blog('photos').articles.each do |article|
        - if (matches < 9) && (!article.tags.include? "Travel")
          - matches = matches + 1
          %li.medium-4.columns.left
            = partial 'photos/event', locals: { article: article }
