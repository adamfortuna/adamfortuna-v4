.nav-wrapper
  %nav.top-bar{'data-topbar' => '', :role => 'navigation'}
    %ul.title-area
      %li.name
        %h1
          %a{href: '/'}= data.config.title
      %li.toggle-topbar.menu-icon
        %a{href: '#'}
          %span
    - if data.config.social.twitter
      %ul.left.twitter
        %li
          %a.twitter{href: "http://twitter.com/#{data.config.social.twitter}", target: '_blank'}
            %i.fi-social-twitter
            %span @adamfortuna

    %section.top-bar-section
      %ul.right.links
        %li
          %a{href: '/about'}
            %i.fi-torso
            About
        %li
          %a{href: '/articles'}
            %i.fi-book
            Articles
        %li
          %a{href: '/photos'}
            %i.fi-camera
            Photos
